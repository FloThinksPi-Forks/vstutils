    "version": "0.2.0",
    "configurations": [
        {
            "name": "Web",
            "type": "python",
            "request": "launch",
            "module": "vstutils",
            "console": "integratedTerminal",
            "args": [
                "web"
            ]
        },
        {
            "name": "flake",
            "type": "python",
            "request": "launch",
            "module": "tox",
            "args": [
                "-e", "flake"
            ]
        },
        {
            "name": "jshint",
            "type": "python",
            "request": "launch",
            "module": "tox",
            "args": [
                "-e", "jshint"
            ]
        },
        {
            "name": "pylint",
            "type": "python",
            "request": "launch",
            "module": "tox",
            "args": [
                "-e", "pylint"
            ]
        },
        {
            "name": "coverage",
            "type": "python",
            "request": "launch",
            "module": "tox",
            "args": [
                "-e", "py37-django22-coverage"
            ]
        },
        {
            "name": "install",
            "type": "python",
            "request": "launch",
            "module": "tox",
            "args": [
                "-e", "py37-django22-install"
            ]
        },
        {
            "name": "tox",
            "type": "python",
            "request": "launch",
            "module": "tox",
        },
    ],
    "compounds": [
        {
            "name": "Pre push",
            "configurations": [
                "flake",
                "pylint",
                "jshint",
                "coverage", 
                "install",
            ]
        },
        {
            "name": "Test",
            "configurations": [
                "flake",
                "pylint",
                "jshint",
                "coverage",
            ]
        }
    ]
}